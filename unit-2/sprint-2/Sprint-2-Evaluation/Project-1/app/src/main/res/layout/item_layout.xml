<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:id="@+id/cardview"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:background="#ff0000"
     android:layout_height="wrap_content" >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

   <TextView
       android:id="@+id/Date"
       android:layout_width="wrap_content"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:text="Today Date  :-"
       android:textSize="15sp"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:text="30-10-2021"
       android:id="@+id/tvDate"
       android:textSize="18sp"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:layout_marginTop="5dp"
       android:text="Total positive Cases :-"
       android:textSize="15sp"/>
   <TextView
       android:id="@+id/tvPositive"
       android:layout_weight="1"
       android:layout_marginTop="5dp"
       android:layout_width="wrap_content"
       android:text="28756489"
       android:textSize="18sp"
       android:layout_height="wrap_content" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Total Negative Cases :-"
       android:layout_weight="1"
       android:layout_marginTop="5dp"
       android:textSize="15sp"/>

   <TextView
       android:id="@+id/tvNegative"
       android:layout_width="wrap_content"
       android:layout_marginTop="5dp"
       android:layout_weight="1"
       android:text="28756489"
       android:textSize="18sp"
       android:layout_height="wrap_content" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:layout_weight="1"
       android:text="Hospitalized Currently :-"
       android:textSize="15sp"/>
   <TextView
       android:id="@+id/tvHospitalizedCurrently"
       android:layout_width="wrap_content"
       android:layout_weight="1"
       android:layout_marginTop="5dp"
       android:text="40199"
       android:textSize="18sp"
       android:layout_height="wrap_content" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:text="On Ventilator Currently :-"
       android:layout_marginTop="5dp"
       android:textSize="15sp"/>

   <TextView
       android:id="@+id/tvVentilatorCurrently"
       android:layout_width="wrap_content"
       android:layout_weight="1"
       android:layout_marginTop="5dp"
       android:text="40199"
       android:textSize="18sp"
       android:layout_height="wrap_content" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:layout_weight="1"
       android:text="Total Deaths :-"
       android:textSize="15sp"/>

   <TextView
       android:id="@+id/tvDeath"
       android:layout_width="wrap_content"
       android:text="40199"
       android:layout_weight="1"
       android:layout_marginTop="5dp"
       android:textSize="18sp"
       android:layout_height="wrap_content" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:layout_marginTop="5dp"
       android:text="Date Checked :-"
       android:textSize="15sp"/>

   <TextView
       android:id="@+id/tvDateChecked"
       android:layout_width="wrap_content"
       android:text="40199"
       android:layout_weight="1"
       android:layout_marginTop="5dp"
       android:textSize="18sp"
       android:layout_height="wrap_content" />
  </LinearLayout>
 </LinearLayout>
</androidx.cardview.widget.CardView>