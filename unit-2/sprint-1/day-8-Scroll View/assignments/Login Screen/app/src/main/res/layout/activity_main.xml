<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <LinearLayout
       android:id="@+id/tvLogin"
       android:layout_width="411dp"
       android:layout_height="50dp"
       android:orientation="horizontal"
       android:background="#0583EA">
      <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:src="@drawable/ic_vector"
          android:background="#0583EA"
          android:layout_margin="23dp"
          android:contentDescription="@string/todo"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="14dp"
          android:layout_marginStart="30dp"
          android:textSize="22sp"
          android:textColor="@color/white"
          android:text="Create Account"/>
   </LinearLayout>

   <LinearLayout
       android:layout_below="@+id/tvLogin"
       android:layout_width="match_parent"
       android:padding="30dp"
       android:orientation="vertical"
       android:layout_height="wrap_content">
   <com.google.android.material.textfield.TextInputLayout
       android:layout_width="match_parent"
       android:focusable="true"
       android:layout_marginTop="20dp"
       android:focusableInTouchMode="true"
       android:layout_height="wrap_content">

      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:background="@color/white"
          android:inputType="text"
          android:text="alam.lason@example.com"/>
   </com.google.android.material.textfield.TextInputLayout>
      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:focusable="true"
          android:layout_marginTop="15dp"
          android:focusableInTouchMode="true"
          android:layout_height="wrap_content">

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:background="@color/white"
             android:inputType="text"
             android:hint="Password ( minimum 6 character )"/>
      </com.google.android.material.textfield.TextInputLayout>
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="15dp"
          android:background="@color/white"
          android:inputType="text"
          android:text="Jane Cooper"/>
      <TextView
          android:id="@+id/editTextPhone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#0583EA"
          android:textSize="18sp"
          android:layout_marginStart="60dp"
          android:layout_marginTop="25dp"
          android:text="USE PHONE NUMBER"/>
      <Button
          android:layout_width="300dp"
          android:background="#0583EA"
          android:layout_marginTop="30dp"
          android:textAllCaps="false"
          android:layout_height="51dp"
          android:text="Sign Up"/>
      <TextView
          android:id="@+id/button"
          android:layout_width="wrap_content"
          android:textSize="25sp"
          android:textAllCaps="false"
          android:layout_gravity="center"
          android:layout_marginTop="15dp"
          android:textColor="@color/black"
          android:layout_height="wrap_content"
          android:text="or"/>
      <Button
          android:id="@+id/button2"
          android:layout_width="300dp"
          android:background="#3B5998"
          android:layout_marginTop="20dp"
          android:drawableStart="@drawable/ic_ion_logo_facebook"
          android:layout_height="51dp"
          android:text="Continue with facebook"/>
      <Button
          android:id="@+id/button3"
          android:layout_width="300dp"
          android:layout_marginTop="10dp"
          android:background="@color/white"
          android:drawableStart="@drawable/ic_flat_color_icons_google"
          android:layout_height="51dp"
          android:text="Continue with google"/>
   </LinearLayout>

</RelativeLayout>