<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/imgHome"
        android:layout_width="match_parent"
        android:background="#079527"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#079527"
            android:src="@drawable/ic_back"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="#079527"
            android:src="@drawable/ic_search"
           android:layout_marginStart="250dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tvPlay"
        android:layout_width="match_parent"
        android:layout_below="@+id/imgHome"
        android:background="#079527"
        android:orientation="vertical"
        android:layout_height="110dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/ic_play"
            android:layout_marginTop="28dp"
            android:padding="10dp"
            android:background="#079527"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/tvSquare"
        android:layout_below="@+id/tvPlay"
        android:layout_width="wrap_content"
        android:src="@drawable/square_bg"
        android:layout_marginTop="25dp"
        android:layout_marginStart="12dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/tvRectangle1"
        android:layout_below="@id/tvPlay"
        android:layout_width="wrap_content"
        android:layout_marginStart="150dp"
        android:src="@drawable/rectangle_1"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/tvRectangle2"
        android:layout_below="@id/tvRectangle1"
        android:layout_width="wrap_content"
        android:layout_marginStart="150dp"
        android:src="@drawable/rectangle_3"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_below="@id/tvRectangle2"
        android:layout_width="wrap_content"
        android:layout_marginStart="150dp"
        android:src="@drawable/rectangle_2"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>
    <ImageView
       android:layout_below="@+id/tvPlay"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@+id/tvPlay"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_flag"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/tvInstall"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvSquare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
           android:layout_margin="8dp"
            android:text="TRY NOW"
            android:textColor="#14AE24"
            android:textSize="15dp"
            android:textStyle="bold"
            android:background="@drawable/outline_box" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:text="INSTALL"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:background="@drawable/outline_box2" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tvCircle"
        android:layout_below="@+id/tvInstall"
        android:weightSum="3"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/circle_bg" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/circle_bg" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:background="@drawable/circle_bg" />
    </LinearLayout>
    <ImageView
        android:id="@+id/tvRectangle"
        android:layout_below="@+id/tvCircle"
        android:layout_width="wrap_content"
        android:src="@drawable/rectangle_bg"
        android:layout_marginStart="25dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_below="@+id/tvRectangle"
        android:layout_width="wrap_content"
        android:src="@drawable/rectangle_4"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

</RelativeLayout>