<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/tvLogin"
        android:layout_width="411dp"
        android:layout_height="50dp"
        android:background="#551947">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="#551947"
            android:layout_marginTop="15dp"
            android:layout_marginStart="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="80dp"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="Fly to Seoul"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tvBooking"
        android:layout_below="@id/tvLogin"
        android:layout_width="match_parent"
        android:background="#551947"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_height="350dp">
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:ems="10"
            android:inputType="text"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:background="#551947"
            android:hint="1 Adult , Economy"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="15dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"

            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="text"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:background="#551947"
                android:hint="Seoul , Korea"
                android:drawableStart="@drawable/ic_airplane"
                android:drawablePadding="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:background="#551947"
                android:layout_marginBottom="5dp"
                android:hint="Choose  Destination"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:ems="10"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:background="#551947"
                android:layout_marginBottom="5dp"
                android:hint="Select  Dates"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_below="@+id/tvBooking"
       android:background="@color/white"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
       <TextView
           android:id="@+id/tvView"
           android:textStyle="normal"
           android:layout_margin="6dp"
           android:textSize="15sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Explore flights by destination" />
       <ImageView
           android:id="@+id/tvImage"
           android:layout_below="@+id/tvView"
           android:layout_width="wrap_content"
           android:src="@drawable/ic_khumbu_valley_1__1_"
           android:layout_marginTop="10dp"
           android:layout_marginStart="10dp"
           android:layout_height="wrap_content"/>
       <ImageView
           android:layout_below="@+id/tvImage"
           android:layout_width="wrap_content"
           android:src="@drawable/ic_maldives_2__1_"
           android:layout_marginTop="10dp"
           android:layout_marginStart="10dp"
           android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/tvView1"
               android:textStyle="bold"
               android:layout_alignParentEnd="true"
               android:layout_marginTop="60dp"
               android:layout_marginEnd="100dp"
               android:textColor="@color/black"
               android:textSize="12sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Khumbu Valley , Nepal" />
           <TextView
               android:layout_below="@+id/tvView1"
               android:layout_alignParentEnd="true"
               android:layout_marginEnd="110dp"
               android:textSize="10sp"
               android:layout_width="wrap_content"
               android:textColor="#808080"
               android:layout_height="wrap_content"
               android:text="NonStop - 5h 16m+" />
           <TextView
               android:layout_below="@+id/tvView1"
               android:textStyle="bold"
               android:layout_alignParentEnd="true"
               android:layout_marginTop="90dp"
               android:layout_marginEnd="100dp"
               android:textColor="@color/black"
               android:textSize="12sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Maldives , South Asia" />
           <TextView
               android:layout_below="@+id/tvView1"
               android:layout_alignParentEnd="true"
               android:layout_marginTop="110dp"
               android:layout_marginEnd="110dp"
               android:textColor="#808080"
               android:textSize="10sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="NonStop - 8h 24m+" />
       </RelativeLayout>
   </LinearLayout>>
</RelativeLayout>