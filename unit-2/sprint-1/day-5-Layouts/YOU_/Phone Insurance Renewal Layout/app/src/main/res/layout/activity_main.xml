<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/tvPending"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="#0583EA">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vector"
            android:background="#0583EA"
            android:layout_margin="23dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="15dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:text="Pending Activation"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvView"
        android:layout_below="@+id/tvPending"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="2 September,2020" />

    <TextView
        android:id="@+id/tvView1"
        android:layout_below="@+id/tvView"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:textColor="#FE122E"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Status:Expired" />
    <ImageView
        android:id="@+id/tvImage"
        android:layout_below="@+id/tvView1"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_width="110dp"
        android:src="@drawable/ic_emojione_monotone_mobile_phone_off"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tvView2"
        android:layout_below="@+id/tvImage"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Nexus 5 Insurance" />

    <Button
        android:layout_below="@+id/tvView2"
        android:id="@+id/button"
        android:textAllCaps="false"
        android:background="#18F148"
        android:textSize="25dp"
        android:layout_marginTop="18dp"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:text="Activate Insurance now" />
    <LinearLayout
        android:id="@+id/tvContainer"
        android:layout_below="@+id/button"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#C4C4C4">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="Device :" />

        <TextView
            android:id="@+id/tvView4"
            android:layout_width="wrap_content"
           android:layout_margin="8dp"
            android:layout_alignParentEnd="true"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LGE Nexus 5" />
         <TextView
            android:layout_below="@+id/tvView3"
             android:layout_width="wrap_content"
             android:textColor="@color/white"
             android:textSize="15dp"
             android:layout_margin="8dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Insurance Item :" />
         <TextView
             android:layout_below="@+id/tvView4"
             android:layout_width="wrap_content"
             android:textColor="@color/white"
             android:textSize="15dp"
             android:layout_margin="8dp"
             android:layout_gravity="end"
             android:layout_alignParentEnd="true"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="12 months" />
     </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_below="@+id/tvContainer"
        android:id="@+id/tvView5"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="Coverage" />
    <LinearLayout
        android:layout_below="@+id/tvView5"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#C4C4C4">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="25dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="All drops and breakage including cracked screen" />
    </LinearLayout>
</RelativeLayout>
